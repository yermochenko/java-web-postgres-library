<?xml version="1.0" encoding="UTF-8"?>
<Configuration xmlns="http://logging.apache.org/log4j/2.0/config" status="WARN">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%date{HH:mm:ss} %-5level [%thread] %class.%method():%line%n%msg%n%exception%n"/>
		</Console>
		<File name="File" fileName="D:/programs/tomcat/logs/java-web-postgsres-library.log">
			<PatternLayout pattern="%date{dd.MM.yyyy, HH:mm:ss} %-5level [%thread] %class.%method():%line%n%msg%n%exception%n"/>
		</File>
	</Appenders>
	<Loggers>
		<Root level="debug">
			<appender-ref ref="Console"/>
			<appender-ref ref="File"/>
		</Root>
	</Loggers>
</Configuration>